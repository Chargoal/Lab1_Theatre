@model TheatreWebApplication.Scenarist

@{
    ViewData["Title"] = "Видалити сценариста";
}

<h1>Видалення сценариста</h1>

<h3>Ви впевнені, що хочете видалити цього сценариста?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ScenaristName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScenaristName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (@Model.Acts.Count == 0)
        {
            <input type="submit" value="Видалити" class="btn btn-danger" />
        }
        else
        {
            <span title="Не можна видалити, бо цим сценаристом є написана вистава.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }
        <a asp-action="Index">До списку сценаристів</a>
    </form>
</div>
