@model TheatreWebApplication.Act

@{
    ViewData["Title"] = "Постанова (видалення)";
}

<h1>Видалення постанови</h1>

<h3>Ви впевнені, що хочете видалити цю картину?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Budget)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Budget)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producer.ProducerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Scenarist)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scenarist.ScenaristName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (@Model.ActActors.Count == 0 && @Model.Sessions.Count == 0)
        {
            <input type="submit" value="Видалити" class="btn btn-danger" />
        }
        else if (@Model.ActActors.Count == 0)
        {
            <span title="Не можна видалити, бо ця постанова запланована в розкладі.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }
        else if (@Model.Sessions.Count == 0)
        {
            <span title="Не можна видалити, бо до цієї постанови прив'язані актори.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }
        else
        {
            <span title="Не можна видалити, бо ця постанова запланована в розкладі, а також до неї прив'язані актори.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }
        <a asp-action="Index">До репертуару</a>
    </form>
</div>
