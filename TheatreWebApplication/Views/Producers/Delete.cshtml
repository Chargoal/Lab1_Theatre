@model TheatreWebApplication.Producer

@{
    ViewData["Title"] = "Видалити продюсера";
}

<h1>Видалення продюсера</h1>

<h3>Ви впевнені, що хочете видалити цього продюсера?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProducerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProducerName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (@Model.Acts.Count == 0)
        {
            <input type="submit" value="Видалити" class="btn btn-danger" />
        }
        else
        {
            <span title="Не можна видалити, бо цим продюсером є поставлена вистава.">
                <input type="submit" value="Видалити" class="btn btn-danger" disabled />
            </span>
        }
        <a asp-action="Index">До списку продюсерів</a>
    </form>
</div>
