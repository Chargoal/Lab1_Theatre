@model TheatreWebApplication.Actor

@{
    ViewData["Title"] = "Подробиці про актора";
}

<h1>Подробиці про актора</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ActorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CareerStart)
        </dt>
        @{string CareerStart = Model.CareerStart.ToString("dd.MM.yyyy");}
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => CareerStart)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутися до списку акторів</a>
</div>
