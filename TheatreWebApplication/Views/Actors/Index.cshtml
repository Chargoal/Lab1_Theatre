@model IEnumerable<TheatreWebApplication.Actor>

@{
    ViewData["Title"] = "Наші актори";
}

<h1>Наші актори</h1>

<p>
    <a asp-action="Create">Додати нового актора</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.ActorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CareerStart)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActorName)
            </td>
            @{string CareerStart = item.CareerStart.ToString("dd.MM.yyyy");}
            <td>
                @Html.DisplayFor(modelItem => CareerStart)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Index" asp-controller="ActActors" asp-route-flag="1" asp-route-id="@item.Id">Картини цього актора</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
