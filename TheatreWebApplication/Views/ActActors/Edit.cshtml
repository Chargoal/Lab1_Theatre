@model TheatreWebApplication.ActActor

@{
    ViewData["Title"] = "Редагування зв'язку";
}

<h1>Редагування дати затвердження контракту</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ActId" />
            <input type="hidden" asp-for="ActorId" />
            <div class="form-group">
                <label asp-for="ContractDate" class="control-label"></label>
                <input type="date" asp-for="ContractDate" class="form-control" />
                <span asp-validation-for="ContractDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До повного списку зв'язків</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
