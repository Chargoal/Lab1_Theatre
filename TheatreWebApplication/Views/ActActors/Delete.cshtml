@model TheatreWebApplication.ActActor

@{
    ViewData["Title"] = "Видалення зв'язку";
}

<h1>Видалення зв'язку</h1>

<h3>Ви впевнені, що хочете видалити цей зв'язок?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContractDate)
        </dt>
        @{string ContractDate = Model.ContractDate.ToString("dd.MM.yyyy");}
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => ContractDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Act)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Act.ActName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Actor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actor.ActorName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ActId" />
        <input type="hidden" asp-for="ActorId" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> |
        <a asp-action="Index">До повного списку зв'язків</a>
    </form>
</div>
