@model TheatreWebApplication.ActActor

@{
    ViewData["Title"] = "Створення нового зв'язку";
}

<h4>Створення нового зв'язку між актором і постановою</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActId" class="control-label"></label>
                <select asp-for="ActId" class ="form-control" asp-items="ViewBag.ActId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ActorId" class="control-label"></label>
                <select asp-for="ActorId" class ="form-control" asp-items="ViewBag.ActorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ContractDate" class="control-label"></label>
                <input type="date" asp-for="ContractDate" class="form-control" />
                <span asp-validation-for="ContractDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">До повного списку зв'язків</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
